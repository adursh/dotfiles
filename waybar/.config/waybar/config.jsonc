        "format-alt": "{:%Y-%m-%d}"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        //"format-full": "{icon} {capacity}%",
        //"format-charging": "Ôóß {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
