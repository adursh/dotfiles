#!/bin/sh

# List available Wi-Fi networks (SSID only, unique)
wifi_list=$(nmcli -t -f IN-USE,SSID device wifi list | sed 's/^*//')

chosen=$(echo "$wifi_list" | wofi --dmenu -p "Wi-Fi")

[ -z "$chosen" ] && exit 0

# Try connecting (will ask for password if needed)
nmcli device wifi connect "$chosen"

